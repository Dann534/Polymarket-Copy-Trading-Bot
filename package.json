{
  "name": "polymarket-advanced-copy-trading-bot",
  "version": "2.0.0",
  "description": "Advanced Polymarket copy trading bot with multi-trader support, MongoDB persistence, health monitoring, and enterprise-grade features",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "health-check": "ts-node src/scripts/healthCheck.ts",
    "check-allowance": "ts-node src/scripts/checkAllowance.ts",
    "set-allowance": "ts-node src/scripts/setAllowance.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "polymarket",
    "copy-trading",
    "trading-bot",
    "prediction-markets",
    "polygon",
    "blockchain",
    "automated-trading",
    "defi"
  ],
  "author": "Kei4650",
  "license": "MIT",
  "dependencies": {
    "@polymarket/clob-client": "^4.22.6",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "mongoose": "^8.9.5",
    "winston": "^3.11.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "prettier": "^3.1.1"
  }
}
